from PIL import Image, ImageDraw, ImageFont
from zipfile import ZipFile
from pathlib import Path
import shutil

# Prepare paths
project_dir = Path("/mnt/data/LoxodontaAfricanaWebsite_Updated")
project_dir.mkdir(exist_ok=True)

# Sample gallery image filenames
gallery_images = [
    "4x4_landcruiser.jpg",
    "elephant.jpg",
    "wildebeest_migration.jpg",
    "zebra.jpg",
    "lion.jpg",
    "cheetah.jpg",
    "leopard.jpg"
]

# Generate sample gallery images with labels
for img_name in gallery_images:
    img_path = project_dir / img_name
    img = Image.new("RGB", (800, 500), color=(200, 230, 200))
    draw = ImageDraw.Draw(img)
    draw.text((20, 20), img_name.replace('_', ' ').replace('.jpg', '').title(), fill="black")
    img.save(img_path)

# Create a sample itinerary HTML with image references
itinerary_html = """
<!DOCTYPE html>
<html>
<head><meta charset="UTF-8"><title>Safari Itinerary</title></head>
<body style="font-family:sans-serif; line-height:1.6">
<h1>Loxodonta Africana - Sample Safari Itinerary</h1>
<h2>Day 1: Arrival in Arusha</h2>
<p>Meet and greet at Kilimanjaro Airport. Overnight at lodge in Arusha.</p>
<img src="4x4_landcruiser.jpg" width="400"><hr>

<h2>Day 2: Tarangire National Park</h2>
<p>Full-day game drive. Home to elephants and baobabs.</p>
<img src="elephant.jpg" width="400"><hr>

<h2>Day 3: Serengeti National Park</h2>
<p>Drive to Serengeti, famous for the wildebeest migration.</p>
<img src="wildebeest_migration.jpg" width="400"><hr>

<h2>Day 4: Serengeti Game Drive</h2>
<p>Look for lions, cheetahs, and the Big Five.</p>
<img src="lion.jpg" width="400"><img src="cheetah.jpg" width="400"><hr>

<h2>Day 5: Ngorongoro Crater</h2>
<p>Descend into the crater, home to zebra and rhinos.</p>
<img src="zebra.jpg" width="400"><hr>

<h2>Day 6: Return via Manyara</h2>
<p>Visit local coffee farms and enjoy cultural food.</p>
<img src="leopard.jpg" width="400"><hr>

<h2>Day 7: Zanzibar Beach Extension (Optional)</h2>
<p>Relax by the Indian Ocean or go snorkeling.</p>
</body>
</html>
"""
# Save itinerary with images
itinerary_path = project_dir / "itinerary.html"
itinerary_path.write_text(itinerary_html, encoding="utf-8")

# Save updated index.html with a gallery section and link to new itinerary
index_path = project_dir / "index.html"
index_html = f"""
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Loxodonta Africana - Safari Experts</title>
  <style>
    body {{ font-family: Arial, sans-serif; background: #f5f5f5; }}
    h1, h2 {{ color: #2e8b57; }}
    nav a {{ margin: 10px; text-decoration: none; color: #2e8b57; font-weight: bold; }}
    .gallery img {{ width: 30%; margin: 10px; border-radius: 10px; }}
  </style>
</head>
<body>
  <h1>Welcome to Loxodonta Africana</h1>
  <nav>
    <a href="#home">Home</a>
    <a href="#gallery">Gallery</a>
    <a href="itinerary.html" target="_blank">üìÖ View Itinerary</a>
  </nav>

  <section id="gallery">
    <h2>Safari Gallery</h2>
    {''.join(f'<img src="{img}" alt="{img.split(".")[0]}">' for img in gallery_images)}
  </section>
</body>
</html>
"""
index_path.write_text(index_html, encoding="utf-8")

# Create final ZIP archive
zip_path = "/mnt/data/LoxodontaAfricanaWebsite_WithGallery.zip"
with ZipFile(zip_path, "w") as zipf:
    for file in project_dir.iterdir():
        zipf.write(file, arcname=file.name)

zip_path  # Provide download link

